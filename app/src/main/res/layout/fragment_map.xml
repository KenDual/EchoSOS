<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Map -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay: thanh nhỏ góc trên hiển thị accuracy + nút toggle -->
    <LinearLayout
        android:id="@+id/overlayTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="12dp">

        <!-- Chip hiển thị độ chính xác -->
        <TextView
            android:id="@+id/tvAccuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="±— m"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:background="#CCFFFFFF"
            android:elevation="2dp"
            android:visibility="gone"
            android:contentDescription="@string/accuracy" />

        <!-- Khoảng cách giữa chip và nút -->
        <View
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <!-- Nút bật/tắt live (tuỳ bạn gắn logic sau) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleLive"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_live"
            android:contentDescription="@string/start_live"
            app:iconPadding="6dp"
            app:cornerRadius="16dp" />
    </LinearLayout>

</FrameLayout>
