<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký tài khoản"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/onBackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàn tất thông tin để sử dụng dịch vụ SOS"
                android:textSize="14sp"
                android:textColor="@color/onSurfaceVariant"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Main Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Personal Info Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📋 Thông tin cá nhân"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Name Input - ID GIỮ NGUYÊN: etName -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/onSurfaceVariant"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Input - ID GIỮ NGUYÊN: etPhone -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/onSurfaceVariant"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Input - ID GIỮ NGUYÊN: etEmail -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/onSurfaceVariant"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address Input - ID GIỮ NGUYÊN: etAddress -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:textSize="16sp"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/onSurfaceVariant"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Security Section Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/outline"
                    android:layout_marginVertical="8dp" />

                <!-- Security Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔒 Bảo mật"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/onSurface"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- PIN Input - ID GIỮ NGUYÊN: etPin -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:endIconMode="password_toggle"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pin_code"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:textSize="16sp"
                        android:letterSpacing="0.2"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/onSurfaceVariant"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- PIN Info -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã PIN 6 chữ số để xác thực các thao tác quan trọng"
                    android:textSize="11sp"
                    android:textColor="@color/onSurfaceVariant"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button - ID GIỮ NGUYÊN: btnSave -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/save"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            app:cornerRadius="12dp" />

        <!-- Terms Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bằng việc đăng ký, bạn đồng ý với điều khoản sử dụng và chính sách bảo mật của chúng tôi."
            android:textSize="11sp"
            android:textColor="@color/onSurfaceVariant"
            android:textAlignment="center"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>